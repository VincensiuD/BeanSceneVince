@model ReservationRestaurant.Data.Sitting

@{
    ViewData["Title"] = "Delete";
}
<div>
<h1 style="text-align: center">Delete Sitting</h1>
<h3 style="text-align: center">Are you sure you want to delete this Sitting?</h3>
</div>
<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="card" style="width: 40rem;background-color: #c9a671; ">
        <dl class="row card-body">
            <dt class="col-md-6 text-end">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-md-6 text-end">
                Date
            </dt>
            <dd class="col-md-6">
                @Model.StartTime.ToShortDateString()
            </dd>
            <dt class="col-md-6 text-end">
                Start Time
            </dt>
            <dd class="col-md-6">
                @Model.StartTime.ToShortTimeString()
            </dd>
            <dt class="col-md-6 text-end">
                End Time
            </dt>
            <dd class="col-md-6">
                @Model.EndTime.ToShortTimeString()
            </dd>
            <dt class="col-md-6 text-end">
                @Html.DisplayNameFor(model => model.Capacity)
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Capacity)
            </dd>
            <dt class="col-md-6 text-end">
                @Html.DisplayNameFor(model => model.Vacancies)
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Vacancies)
            </dd>
            <dt class="col-md-6 text-end">
                @Html.DisplayNameFor(model => model.Pax)
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Pax)
            </dd>
             <dt class="col-md-6 text-end">
                Reservations
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Reservations.Count)
            </dd>
            <dt class="col-md-6 text-end">
                @Html.DisplayNameFor(model => model.Restaurant)
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.Restaurant.Name)
            </dd>
            <dt class="col-md-6 text-end">
                Sitting Type
            </dt>
            <dd class="col-md-6">
                @Html.DisplayFor(model => model.SittingType.Name)
            </dd>
            <dt class="col-md-6 text-end">
                Is Closed
            </dt>
            @if (Model.IsClosed)
            {
                <dd class="col-md-6">
                    Closed
                </dd>
            }
            else
            {
                <dd class="col-md-6">
                    Open
                </dd>
            }
        </dl>
        <h4 class="text-danger">@ViewBag.ReservationExist</h4>

        <div style="text-align: center; padding-bottom: 20px;">
            <button type="button" class="btn btn-coffee" data-bs-toggle="modal" data-bs-target="#myModal" >Delete Sitting?</button>
            <a asp-action="Index" class="btn btn-coffee">Back to List</a>
        </div>

        <!-- Modal -->
        <div class="container">
            <div class="row">
                <div class="modal-box ">
                    <div class="modal fade" data-bs-backdrop="static" id="myModal" role="dialog">
                        <div class="modal-dialog modal-lg" role="document">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                <div class="modal-body">
                                    <div class="icon"> ! </div>
                                    <h4 class="title">Delete Sitting</h4>
                                    <h3 class="description">Delete the Sitting? or clear all the Reservations?</h3>
                                    <p>Are you sure you want to delete?</p>
                                    <form style="margin:0; padding:0; display:inline" asp-action="Delete">
                                        <input type="hidden" asp-for="Id" />
                                        <input style="display:inline" type="submit" value="Delete sitting?" class="subscribe" />
                                    </form>
                                    <form style="margin:0; padding:0; display:inline" asp-action="DeleteAll">
                                        <input type="hidden" asp-for="Id" />
                                        <input style="display:inline" type="submit" value="Clear List" class="subscribe" />
                                    </form>
                                    <button type="button" class="modal-cancel" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>

@section JScript{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#myModal").modal();
        });
    </script>
}
@section Styles{
    <style>
        h1, h3 {
            text-align: center;
        }

        dt {
            font-size: larger;
        }

        dd {
            font-size: large;
        }
        div.card {
            border: solid 1px lightgrey;
            padding: 10px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
}