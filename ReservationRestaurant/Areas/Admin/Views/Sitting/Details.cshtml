@model ReservationRestaurant.Data.Sitting

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sitting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToShortTimeString()
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime.ToShortTimeString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vacancies)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vacancies)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Name)
        </dd>
        <dt class="col-sm-2">
            Sitting Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SittingType.Name)
        </dd>
        <dt class="col-sm-2">
            Is Closed
        </dt>
        @if (Model.IsClosed)
        {
            <dd class="col-sm-10">
                Closed
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Open
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-sandy">Edit</a> 
    <a asp-action="Index" class="btn btn-sandy">Back to Sitting List</a>
</div>
