@model IEnumerable<ReservationRestaurant.Data.Person>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-sandy">Create New</a>
</p>
<table class="table table-sm" style="background-color:antiquewhite">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
               Is a Member
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @if(item.UserId == null)
                     {
                        <div>No</div>
                     }
                    else { <div>Yes</div>}
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sandy">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sandy">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sandy">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>