@model ReservationRestaurant.Areas.Admin.Models.Sitting.Update

@{
    ViewData["Title"] = "Update Sitting";
}

<h1>Update Sitting Details</h1>
<br />
<form asp-action="Update">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-2"></div>
        <div class="col-md-4" style="border-right-width: 0px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SittingTypeId" class="control-label"></label>
                <select asp-for="SittingTypeId" class="form-control" asp-items="Model.SittingTypeSL"></select>
                <span asp-validation-for="SittingTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" id="chosenDate" class="form-control" type="date" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time1" class="control-label"></label>
                <input asp-for="Time1" id="time1" class="form-control" type="time" />
                <span asp-validation-for="Time1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time2" class="control-label"></label>
                <input asp-for="Time2" id="time2" class="form-control" type="time" />
                <span asp-validation-for="Time2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
             <div class="form-group form-check" style="border: solid 1px saddlebrown; margin:10px; padding-block:5px;">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsClosed" style="border: solid 1px saddlebrown; margin-left:1px;" /> @Html.DisplayNameFor(model => model.IsClosed)
                </label>
            </div>
        
            <div class="form-group" style=" padding-left:100px; align-items:center ;">
                <a asp-action="Index" class="btn btn-coffee">Back to List</a>
                <input type="submit" value="Save" class="btn btn-coffee" style=" width: 110px;" />
            </div>
            <p> @ViewBag.ValidationMessage</p>
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="col-md-2"></div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Styles{
    <style>
        h1 {
            text-align: center;
        }

        div.col-md-4 {
            border: solid 1px lightgrey;
            padding: 10px;
            background-color: white;
        }
    </style>
}