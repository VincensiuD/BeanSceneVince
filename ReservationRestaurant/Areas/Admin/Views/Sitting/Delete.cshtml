@model ReservationRestaurant.Data.Sitting

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sitting</h4>
    <hr />


    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vacancies)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vacancies)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restaurant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SittingType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SittingType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsClosed)
        </dt>
        @if (Model.IsClosed)
        {
            <dd class="col-sm-10">
                Closed
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Open
            </dd>
        }
    </dl>

    <h4 class="text-danger">@ViewBag.ReservationExist</h4>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
        Delete Sitting?
    </button>



    <!-- Modal -->

    <div class="container">
        <div class="row">
            <div class="modal-box ">
                <div class="modal fade" data-bs-backdrop="static" id="myModal" role="dialog">
                    <div class="modal-dialog modal-lg" role="document">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <div class="modal-body">
                                <div class="icon"> ! </div>
                                <h4 class="title">Delete Sitting</h4>
                                <h3 class="description">Delete the Sitting? or clear all the Reservations?</h3>
                                <p>Are you sure you want to delete?</p>
                                <form style="margin:0; padding:0; display:inline" asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <input style="display:inline" type="submit" value="Delete sitting?" class="subscribe" />
                                </form>
                                <form style="margin:0; padding:0; display:inline" asp-action="DeleteAll">
                                    <input type="hidden" asp-for="Id" />
                                    <input style="display:inline" type="submit" value="Clear List" class="subscribe" />
                                </form>
                                <button type="button" class="modal-cancel" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section JScript{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#myModal").modal();
        });
    </script>
}



