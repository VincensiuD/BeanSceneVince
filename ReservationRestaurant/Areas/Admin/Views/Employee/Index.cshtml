@model IEnumerable<ReservationRestaurant.Areas.Admin.Models.Employee.UpdateRole>
@{
    ViewData["Title"] = "Index";
}

<h1>Staff List</h1>
<div>
    <a asp-action="Create" asp-route-id="" class="btn btn-sandy">Create New </a> 

</div>
@foreach (var item in Model)
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Title)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sandy">Edit</a> 
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sandy">Delete</a> 
        @if (item.Title == "Manager")
        {
            <a asp-action="RemoveManagerRole" asp-route-id="@item.Id" class="btn btn-sandy">Remove Manager Access</a>
        }
        else
        {
            <a asp-action="UpdateRoleToManager" asp-route-id="@item.Id" class="btn btn-sandy">Give Manager Access</a>
        }
    </div>
}