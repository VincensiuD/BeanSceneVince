@{
    ViewData["Title"] = "Index";
}

<h1>User List</h1>
<p>
    <a asp-action="IndexList" asp-route-role="All" class="btn btn-sandy">Show All Users</a>
</p>

<div class="table-responsive-sm">
    <table class="table table-sm" style="">
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="color:deepskyblue;"><ul class="abc"><li class="abc"><a asp-action="IndexList" asp-route-role="Manager">Manager</a></li></ul></td>
            </tr>
            <tr>
                <td style="color: forestgreen;"><ul class="abc"><li class="abc"><a asp-action="IndexList" asp-route-role="Employee">Employee</a></li></ul></td>
            </tr>
            <tr>
                <td style="color:rebeccapurple;"><ul class="abc"><li class="abc"><a asp-action="IndexList" asp-route-role="Member">Member</a></li></ul></td>
            </tr>
            <tr>
                <td style="color:black;"><ul class="abc"><li class="abc"><a asp-action="IndexList" asp-route-role="NotMember">User- Not Registered</a></li></ul></td>
            </tr>
        </tbody>
    </table>
</div>

@section Styles{
    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            background-color: white;
            font-weight: bold;
            font-size: large;
            font-family: verdana,Times New Roman, Times, serif;
        }

        th, td {
            text-align: left;
            padding: 16px;
        }

        a {
            text-decoration: none;
        }

            a:hover {
                color: dimgray;
            }

        ul.abc {
            list-style-type: none;
        }

        li.abc {
            background: #f0e7c6;
            margin: 5px;
            padding: 20px;
        }

        a.btn {
            font-size: large;
            font-weight: bold;
            padding: 16px;
            margin: 5px;
        }
    </style>
}